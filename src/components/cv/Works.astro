---
import { getCollection } from "astro:content";

const works = (await getCollection('work')).filter(
project => project.data.featured
);
---
<div class="flex flex-col gap-2">
    <h2 class="text-sm">Professional Projects</h2>
    <div class="grid grid-cols-3 gap-2">
        {
        works.map((work) => (
        <div class="border shadow flex gap-1 flex-col p-2">
            <h1 class="font-medium">{work.data.title}</h1>
            <p>
                {work.data.description}
            </p>

        </div>
        ))
        }

    </div>
</div>