---
import { getCollection } from 'astro:content';
import ArrowUpRight from '../icons/arrow-up-right.astro';
//get only latest 5
const blogs = (await getCollection('blog'))
---
<div>
    <h1 class="font-semibold text-neutral-950">Recent Blog Posts</h1>
    <div class="flex flex-col gap-2.5 mt-2.5">
        { blogs.map(blog => {
            return (
                <a
                 class="group cursor-pointer" href={`/blogs/${blog.slug}/`}>
                    <div class="flex justify-between">

                    <h2 class="text-neutral-800 font-medium">{blog.data.title}</h2>
                    <ArrowUpRight/>
                    </div>
                <p>{blog.data.description}</p>
            </a>
        )
        
    }
)}

</div>
</div>